    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
    </style>

    <style name="AppTheme.Detailed" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_gray_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/light_gray_background</item>
    </style>

    <style name="AppTheme.CollapsedTitle">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="AppTheme.ExpandedTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/light_text</item>

    </style>

    <style name="AppTheme.Subtitles">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>em>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
